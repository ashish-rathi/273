<!doctype html>
<html>
<head>
<link href="/styles/customstyle.css" rel="stylesheet" type="text/css" >
<meta charset="utf-8">
<title>Sign Up</title>
</head>
<script src="/jquery-ui-1.11.1/external/jquery/jquery.js"></script>
<script src="/jquery-ui-1.11.1/jquery-ui.js"></script>
<script src="/validator/jquery.validate.js"></script>
<script>
$(document).ready(function(){
       var x = $("#message").html();
       if(x!='')
       {
               $('#notification').slideToggle(500).delay(2000).slideToggle(500);
       }
  $("#form1").validate()
})
</script>
<style>
.error{color:red}
</style>
<body>
<table width="100%" border="0">
  <tbody>
    <tr>
      <td width="62%">
      	<div class="formfont" style="font-size: 30px;">
      		<img src="images/mylogo.png" width="217" height="88"/>
      	Get started with eWay</div>
        <br>
      <div class="txtboxes" style="font-weight: bold; margin-left:2em">
      Create your personal account or <a href="businessacc.ejs">start a business account</a>.
      </div>
      </td>
      <td width="38%">&nbsp;</td>
    </tr>
    <tr>
      <td rowspan="2"><form id="form1" name="form1" method="post" action="register" >
      <div class="formfont">
        First Name<br>
        <input type="text" name="txtfname" id="txtfname" class="txtboxes required"><br>
        Last Name<br>
        <input type="text" name="txtlname" id="txtlname" class="txtboxes required"><br>
        Email<br>
        <input type="text" name="txtemail" id="txtemail" class="txtboxes required"><br>
        Create your password<br>
        <input type="password" name="txtpwd" id="txtpwd" class="txtboxes required"><br>
        Confirm password<br>
        <input type="password" name="txtpwd2" id="txtpwd2" class="txtboxes required"><br>
        <br><br>
        <button class="ButtonBuss" name="signup" type="submit" id="signup">Submit</button>
        </div>
      </form>
      </td>
      
      <td><div class="formfont">Already have an account?</div>
      <br><br>
      <form id="frmregister" name="frmregister" method="get" action="signin">
      			<button class="ButtonBuss" type="submit" name="register" id="register">Sign In</button>
      </form>
      </td>
    </tr>
    <tr>
      
      <td>&nbsp;</td>
    </tr>
  </tbody>
</table>
</body>
</html>
